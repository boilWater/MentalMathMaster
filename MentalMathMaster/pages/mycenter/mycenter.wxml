        <text class='mintext'> 次 </text>
        <view class='scorehightext'>最高分</view>
      </view>

    </view>

    <view class='sharegetchance flex vertical'>
      
      <view class='share flex vertical' bindtap='shareTap'>
        <image src='../resources/images/wechat.png'></image>
        <text> 炫耀战绩</text>
