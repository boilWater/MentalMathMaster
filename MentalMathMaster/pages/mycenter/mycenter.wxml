<view class='container'>

  <view class='bluetop'>

    <view class='headinfo'>
      <image src = '../resources/images/headinfo.png'></image>
    </view>

    <view class='receivegift'>
      <text class='nameinfo mintext'>{{nameinfo}},可领取娃娃 {{numberinfo}} 个</text>
      <text class='goreveivegift' bindtap='goGiftTap'>去领奖</text>
