/* 底部导航栏布局 */
.bottom-info{
  text-align: center;
  color: #ccc;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  background-color: #fae45e;
  padding: 18rpx 0;
  justify-content: space-around;
  z-index: 1000;
  border-top-color: #5d6979;
  border-top-width: 2rpx;
}

.bottom-info .link{
  width: 50%;
  color: #5d6979;
  text-align: center;
}

.bottom-info .link text{
  font-size: 30rpx;
  display: block;
  color: #6344ce;
}

.bottom-info .link i{
  font-size: 42rpx;
  color: #fff;
}

.bottom-info .link .icon{
  display: inline-block;
  /* border: 1rpx solid #5d6979; */
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  /* border-radius: 50%; */
  margin-bottom: 5rpx;
}

.bottom-info .link .icon i{
  border: none;
}

