/* pages/giftlist/giftlist.wxss */

.page {
  background-color: #7b60ef;
}

.listcontinor {
  position: absolute;
  width: 100%;
  height: 320%;
  background-color: #7b60ef;
}

.choosebar {
  margin: 20rpx 0rpx; 
  height: 80rpx;
  margin-bottom: 30rpx;
  /* background-color: #fff;  */
}

.glist {
  margin-left: 12%;
  margin-right: 10%;
  width: 33%;
  height: 60rpx;
  font-size: larger;
  background-color: #fff;
  border-radius: 30rpx;
  text-align: center;
}

.record {
  margin-right: 12%;
  width: 33%;
  height: 60rpx;
  font-size: larger;
  background-color: #7b60ef; 
  border-radius: 30rpx;
  text-align: center;
}

/* 礼物列表的 item 布局 */

.item {
  /* margin: 15rpx 35rpx; */
  margin-top: 20rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  margin-bottom: 35rpx;
  height: 420rpx;
  background-color: #fff;
  box-shadow: 0rpx 3rpx 20rpx rgba(255, 130, 84, 0.5);
  border-radius: 15rpx;
}

.picture {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background-color: #aaa;
}

.picture image {
  width: 100%;
  height: 320rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.bottom {
  margin-top: -1rpx;
  width:100%;
  height: 102rpx;
  border-bottom-left-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  background-color: #fae45e; 
}

.bottom .name {
  width: 40%;
  padding-left: 30rpx;
  margin-right: 30%;
  font-size: 56;
  color: #fff;
  /* background-color: #aaa;  */
}

.bottom .receive {
  /* position: absolute; */
  width: 20%;
  font-size: xx-small;
  padding: 5rpx 0rpx;
  margin-right: 25rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #fff; 
}
