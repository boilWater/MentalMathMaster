/* pages/giftlist/giftlist.wxss */

.page {
  background-color: #7b60ef;
}

.listcontinor {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #7b60ef;
}

.choosebar {
  margin: 20rpx 0rpx; 
  height: 80rpx;
  margin-bottom: 30rpx;
  /* background-color: #fff;  */
}

.glist {
  margin-left: 12%;
  margin-right: 10%;
  padding-top: 2rpx;
  width: 33%;
  height: 50rpx;
  font-size: 15px;
  /* background-color: #fff; */
  border-radius: 30rpx;
  text-align: center;
}

.record {
  margin-right: 12%;
  padding-top: 2rpx;
  width: 33%;
  height: 50rpx;
  font-size: 15px;
