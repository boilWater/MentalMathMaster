/* pages/customspass/customspass.wxss */
page{
/* background-color:#fae45e; */
height:100%;
}

.bluetop {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 70%; 
  background-color: #7b61ef;
} 

.detailtext {
  margin-top: 20rpx;
  text-align: center;
  font-size: xx-small;
  color: #fae45e;

}

.percent {
  margin: 45rpx 40rpx 40rpx 40rpx;
  border-radius: 10rpx;
}

.pass {
  width: 100%;
  text-align: center;
  margin-bottom: 90rpx;
}

.currentpass {
  margin: 20rpx 100rpx;
  font-size: 65px;
  text-align: center;
  /* background-color: #ccc; */
  color: #fff;
}

.yellowbottom {
  position: absolute;  
  height: 30%;
  width: 100%; 
  top: 70%;
  background-color: #fae45e;
}

.correct {
  margin-left: 4%;
  margin-right: 4%;
  width: 44%;
  height: 300rpx;
  text-align: center;
  border-radius: 18rpx;
  background-color: #ccc;
}

.correct image {
  width: 335rpx;
  height: 300rpx;
  border-radius: 18rpx;
} 

.wrong {
  margin-right: 4%;
  width: 44%;
  height: 300rpx;
  text-align: center;
  border-radius: 18rpx;
  background-color: #fb4f28; 
}

.wrong image {
  width: 335rpx;
  height: 300rpx;
  border-radius: 18rpx;
} 